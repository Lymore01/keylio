{
  "name": "keylio",
  "version": "0.1.0-beta.1",
  "description": "A modular, framework-agnostic authentication system for TypeScript",
  "license": "MIT",
  "type": "module",
  "homepage": "https://keylio-auth.vercel.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lymore01/keylio.git",
    "directory": "packages/keylio"
  },
  "keywords": [
    "auth",
    "typescript",
    "nextjs",
    "react",
    "mongodb",
    "prisma",
    "oauth",
    "security",
    "social"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/auth/Keylio.mjs",
  "module": "./dist/auth/Keylio.mjs",
  "types": "./dist/auth/Keylio.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "clean": "rimraf dist coverage .turbo",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "test:adapters": "vitest run adapters",
    "typecheck": "tsc --noEmit -p tsconfig.json"
  },
  "exports": {
    ".": {
      "import": "./dist/auth/Keylio.mjs",
      "types": "./dist/auth/Keylio.d.mts",
      "default": "./dist/auth/Keylio.mjs"
    },
    "./react": {
      "import": "./dist/client/react/src/index.mjs",
      "types": "./dist/client/react/src/index.d.mts",
      "default": "./dist/client/react/index.mjs"
    },
    "./next": {
      "import": "./dist/client/next/src/index.mjs",
      "types": "./dist/client/next/src/index.d.mts",
      "default": "./dist/client/next/index.mjs"
    },
    "./adapters/prisma": {
      "import": "./dist/adapters/prisma-adapter/index.mjs",
      "types": "./dist/adapters/prisma-adapter/index.d.mts",
      "default": "./dist/adapters/prisma-adapter/index.mjs"
    },
    "./adapters/mongodb": {
      "import": "./dist/adapters/mongodb-adapter/index.mjs",
      "types": "./dist/adapters/mongodb-adapter/index.d.mts",
      "default": "./dist/adapters/mongodb-adapter/index.mjs"
    },
    "./types": {
      "import": "./dist/types/keylio-types.mjs",
      "types": "./dist/types/keylio-types.d.mts",
      "default": "./dist/types/keylio-types.mjs"
    }
  },
  "dependencies": {
    "react": "19.2.0"
  },
  "peerDependencies": {
    "next": ">=16.0.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  },
  "devDependencies": {
    "@keylio/core": "workspace:*",
    "@keylio/db": "workspace:*",
    "@keylio/shared": "workspace:*",
    "@keylio/types": "workspace:*",
    "@types/react": "^19.2.2",
    "rimraf": "^6.1.2",
    "tsdown": "^0.18.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "packageManager": "pnpm@10.17.0"
}
