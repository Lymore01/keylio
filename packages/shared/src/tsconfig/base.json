{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "noErrorTruncation": true,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "customConditions": ["dev-source"]
  },
  "exclude": ["**/dist/**", "**/node_modules/**"]
}
